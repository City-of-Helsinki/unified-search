[general]
# Match anywhere (search) instead of just at the beginning of the line
# https://jorisroovers.github.io/gitlint/configuration/#regex-style-search
regex-style-search=true

[title-max-length]
line-length=72

[title-min-length]
min-length=3

[body-max-line-length]
line-length=72

[body-min-length]
min-length=0
