{
  "compilerOptions": {
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "allowJs": true
  },
  "include": ["src/**/*", "vitest.config.ts"],
  "exclude": ["**/dist", "**/coverage", "**/node_modules"]
}
